<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AndroidApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:AndroidApp"
    Shell.FlyoutBehavior="Flyout">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Arrangement"
        ContentTemplate="{DataTemplate local:ArrangerPage}"
        Route="ArrangerPage"/>

    <ShellContent
        Title="Volunteers"
        ContentTemplate="{DataTemplate local:VolunteerPage}"
        Route="VolunteersPage"/>
</Shell>
